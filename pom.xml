         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.insmess.knowledge</groupId>
    <artifactId>dubheknow</artifactId>
    <version>${revision}</version>
    <packaging>pom</packaging>

    <modules>
        <module>dubheknow-framework</module>
        <module>dubheknow-module-system</module>
        <module>dubheknow-server</module>
        <module>dubheknow-module-graph</module>
    </modules>

    <properties>
        <java.version>21</java.version>
        <revision>1.0.0</revision>
        <spring-boot.version>3.4.7</spring-boot.version>
        <!-- 你原有的版本（保留/按需调整） -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven-jar-plugin.version>3.3.0</maven-jar-plugin.version>
        <maven-compiler-plugin.version>3.13.0</maven-compiler-plugin.version>

        <!-- 第三方库版本：可逐步升级到对 Jakarta 友好的版本 -->
        <druid.version>1.2.23</druid.version>       <!-- 若用 Boot 3，优先切换 artifactId: druid-spring-boot-3-starter（见下方依赖注释） -->
        <bitwalker.version>1.21</bitwalker.version>
        <kaptcha.version>2.3.3</kaptcha.version>    <!-- 可能依赖 javax，若在 Boot 3 有冲突需换支持 Jakarta 的分支/替代 -->
        <pagehelper.boot.version>2.1.1</pagehelper.boot.version>
        <fastjson.version>2.0.43</fastjson.version>
        <oshi.version>6.6.1</oshi.version>
        <commons.io.version>2.13.0</commons.io.version>
        <poi.version>5.2.3</poi.version>
        <velocity.version>2.3</velocity.version>
        <servlet.version>6.1.0</servlet.version>

        <!-- 替换旧版 jjwt:0.9.1（javax）为 0.11.x 三件套（Jakarta 友好） -->
        <jjwt.version>0.11.5</jjwt.version>
    </properties>

