            <!--=========================================-->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!-- 你原来在 dependencyManagement 中声明版本的三方库（保留） -->
            <!-- 阿里数据库连接池（Boot 3 建议使用 druid-spring-boot-3-starter，见下方依赖处注释） -->
